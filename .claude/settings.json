{
  "permissions": {
    "allow": [
      "Edit",
      "Grep",
      "LS",
      "Write",
      "Bash(bq show:*)",
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(echo:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git clone:*)",
      "Bash(git commit:*)",
      "Bash(git fetch:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git config:*)",
      "Bash(git symbolic-ref:*)",
      "Bash(go fmt:*)",
      "Bash(go mod:*)",
      "Bash(go test:*)",
      "Bash(go vet:*)",
      "Bash(go version:*)",
      "Bash(gh pr create:*)",
      "Bash(jira issue view:*)",
      "Bash(jira issue edit:*)",
      "Bash(jira issue comment:*)",
      "Bash(make test)",
      "Bash(mkdir:*)",
      "Bash(npm:*)",
      "Bash(pwd:*)",
      "Bash(yarn:*)",
      "Bash(which:*)",
      "atlassian",
      "playwright",
      "Framelink_Figma_MCP",
      "WebFetch(domain:anthropic.com)",
      "WebFetch(domain:developer.atlassian.com)",
      "WebFetch(domain:jira.atlassian.com)"
    ],
    "deny": [
      "Bash(curl:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/gcloud-allowlist"
          }
        ]
      }
    ]
  }
}